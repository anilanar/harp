{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "noImplicitAny": true,
        "outDir": "ts",
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "removeComments": false
    },
    "files": [
        "node_modules/dedent-js/lib/index.d.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
